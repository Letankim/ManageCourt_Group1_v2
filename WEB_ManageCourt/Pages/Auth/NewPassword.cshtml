@page
@model WEB_ManageCourt.Pages.Auth.NewPasswordModel
@{
    ViewData["Title"] = "Cập nhật mật khẩu mới";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="text-center mb-4">
                        <i class="fas fa-key"></i> Quên mật khẩu
                    </h4>

                    @if (TempData["OtpMessage"] != null)
                    {
                        <div class="alert alert-info" role="alert">
                            @TempData["OtpMessage"]
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }



                    <form method="post">
                        <div class="form-group">
                            <label for="newPassword">Mật khẩu mới</label>
                            <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" required />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Xác nhận mật khẩu</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success btn-block">Đặt lại mật khẩu</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>
