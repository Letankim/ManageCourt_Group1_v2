@page "/Auth/ForgotPassword"
@model WEB_ManageCourt.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="text-center mb-4">
                        <i class="fas fa-key"></i> Quên mật khẩu
                    </h4>

                    @if (TempData["OtpMessage"] != null)
                    {
                        <div class="alert alert-info" role="alert">
                            @TempData["OtpMessage"]
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }
                    <form method="post" asp-page-handler="SendOtp">
                        <div class="form-group">
                            <label for="username">Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" id="username" required />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">@Model.SendOtpMessage</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
