@page
@model WEB_ManageCourt.Pages.Profile.EditProfileModel
@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="text-center mb-4"><i class="fas fa-user-edit"></i> Chỉnh sửa thông tin cá nhân</h4>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form method="post">
                        <div class="form-group">
                            <label for="fullname">Họ và Tên</label>
                            <input asp-for="CurrentUser.FullName" class="form-control" id="fullname" />
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input asp-for="CurrentUser.Email" class="form-control" id="email" type="email" />
                        </div>

                        <div class="form-group">
                            <label for="phone">Số điện thoại</label>
                            <input asp-for="CurrentUser.Phone" class="form-control" id="phone" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Lưu thay đổi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
