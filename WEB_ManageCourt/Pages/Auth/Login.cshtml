@page
@model WEB_ManageCourt.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="text-center mb-4">
                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                    </h4>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <div asp-validation-summary="All"></div>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form method="post" asp-page-handler="Login">
                        <div class="form-group">
                            <label for="username"><i class="fas fa-user"></i> Tên đăng nhập</label>
                            <input asp-for="LoginViewModel.Username" class="form-control" id="username" required />
                            <span asp-validation-for="LoginViewModel.Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="password"><i class="fas fa-lock"></i> Mật khẩu</label>
                            <input asp-for="LoginViewModel.Password" type="password" class="form-control" id="password" required />
                            <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-sign-in-alt"></i> Đăng nhập
                        </button>

                        <div class="text-center mt-3">
                            <a href="~/Auth/ForgotPassword" class="text-muted"><i class="fas fa-key"></i> Quên mật khẩu?</a>
                        </div>
                    </form>

                    <hr />

                    <div class="text-center mt-4">
                        <p>Bạn chưa có tài khoản?</p>
                        <a href="~/Auth/Register" class="btn btn-secondary">
                            <i class="fas fa-user-plus"></i> Đăng ký
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
