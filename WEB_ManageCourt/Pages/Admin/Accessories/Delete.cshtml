@page
@model WEB_ManageCourt.Pages.Admin.Accessories.DeleteModel

@{
    ViewData["Title"] = "Xóa Phụ Kiện";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0" style="color: #fff"><i class="fas fa-exclamation-triangle"></i> Xác nhận xóa phụ kiện</h4>
        </div>
        <div class="card-body">
            <p class="text-center text-danger">Bạn có chắc chắn muốn xóa phụ kiện này không?</p>

            <table class="table table-bordered mb-4">
                <tbody>
                    <tr>
                        <th style="width: 30%;">Tên Phụ Kiện</th>
                        <td>@Model.Accessory.Name</td>
                    </tr>
                    <tr>
                        <th>Giá</th>
                        <td>@Model.Accessory.Price.ToString("C")</td>
                    </tr>
                </tbody>
            </table>

            <form method="post" class="text-center">
                <input type="hidden" asp-for="Accessory.AccessoryId" />
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
                <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Hủy</a>
            </form>
        </div>
    </div>
</div>
