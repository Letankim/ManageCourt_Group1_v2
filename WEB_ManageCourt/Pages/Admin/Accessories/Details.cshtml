@page
@model WEB_ManageCourt.Pages.Admin.Accessories.DetailsModel

@{
    ViewData["Title"] = "Chi Tiết Phụ Kiện";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0" style="color: #fff"><i class="fas fa-info-circle"></i> Chi Tiết Phụ Kiện</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered mb-4">
                <tbody>
                    <tr>
                        <th style="width: 30%;">Tên Phụ Kiện</th>
                        <td>@Model.Accessory.Name</td>
                    </tr>
                    <tr>
                        <th>Giá</th>
                        <td>@Model.Accessory.Price.ToString("C")</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center">
                <a asp-page="./Edit" asp-route-id="@Model.Accessory.AccessoryId" class="btn btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                <a asp-page="./Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
            </div>
        </div>
    </div>
</div>
