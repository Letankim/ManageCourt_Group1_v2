<UserControl x:Class="WPF_ManageCourt.Controls.SidebarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundMainSidebar}"
              Height="auto"
             >
    <StackPanel>
        <Button Content="Dashboard" Background="{StaticResource BackgroundMainButton}" Command="{Binding OpenDashboardManagementCommand}" Foreground="White" Margin="5"/>
        <Button Content="Quản lí user" Background="{StaticResource BackgroundMainButton}" Command="{Binding OpenUserManagementCommand}" Foreground="White" Margin="5"/>
        <Button Content="Quản lý booking" Background="{StaticResource BackgroundMainButton}" Command="{Binding OpenBookingManagementCommand}" Foreground="White" Margin="5"/>
        <Button Content="Quản lý court" Background="{StaticResource BackgroundMainButton}" Command="{Binding OpenCourtManagementCommand}" Foreground="White" Margin="5"/>
        <Button Content="Quản lý accessory" Background="{StaticResource BackgroundMainButton}" Command="{Binding OpenAccessoryManagementCommand}" Foreground="White" Margin="5"/>
        <Button Content="Quản lí schedule" Background="{StaticResource BackgroundMainButton}" Command="{Binding OpenScheduleManagementCommand}" Foreground="White" Margin="5"/>
    </StackPanel>
</UserControl>
